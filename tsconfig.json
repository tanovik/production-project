        "*": ["./src/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      // "allowUmdGlobalAccess": true,
      "strictNullChecks": true//
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS",
        
      },
