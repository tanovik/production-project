{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      // "module": "es6",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths":{
		  "@/*": ["./src/*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		// "allowUmdGlobalAccess": true,
		"strictNullChecks": true,//
		"strict": true,
		"isolatedModules": true,
		"types": ["vite-plugin-svgr/client", "node"]
		// "types": ["vite-plugin-svgr/client", "node", "jest"]
		// "types": ["node"]
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS",
        
      },
	  "include": [
		"./config/jest/setupTests.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx"
	  ],
    },
	
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["**/*.test.ts", "**/*.test.tsx"],
